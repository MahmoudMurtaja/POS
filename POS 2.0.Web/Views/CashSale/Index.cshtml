@model IEnumerable<POS_2._0.Web.Models.CashSale>

@{
    ViewData["Title"] = "Index";
    var currnetPage = ViewBag.page;
    var previousPage = currnetPage - 1;
    var naxtPage = currnetPage + 1;
}
<br/>
<h1>Cash Sales</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="card card-custom">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                Cash Sale
                <small>Manage All Cash Sales</small>
            </h3>
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-8">
                        <input placeholder="Search by name" value="@ViewBag.SearchKey" name="SearchKey" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <input type="submit" class="btn btn-light-primary font-weight-bold mr-2" value="Search" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-toolbar">
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name Item
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Date of Sale
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Item.Name
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.CreatedAt.ToString("yyyy/MM/dd")
                            </td>
                            <td>
                                <a href="~/CashSale/Edit/@item.Id" class="btn btn-warning"><i class="flaticon flaticon-edit"></i>Edit</a>
                                <a href="~/CashSale/Delete/@item.Id" class="btn btn-danger"><i class="flaticon flaticon-delete"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="d-flex flex-wrap py-2 mr-3">
                    @if (currnetPage == 1)
                    {
                        <a href="~/CashSale/Index?page=@previousPage" class="btn btn-icon btn-light-primary mr-2 my-1 disabled"><i class="ki ki-bold-arrow-back icon-xs"></i></a>
                    }
                    else
                    {
                        <a href="~/CashSale/Index?page=@previousPage" class="btn btn-icon btn-light-primary mr-2 my-1"><i class="ki ki-bold-arrow-back icon-xs"></i></a>
                    }


                    @for (int i = 1; i <= ViewBag.numberOFPages; i++)
                    {
                        @if (currnetPage == i)
                        {
                            <a href="~/CashSale/Index?page=@i" class="btn btn-icon border-0 btn-hover-primary active mr-2 my-1">@i</a>
                        }
                        else
                        {
                            <a href="~/CashSale/Index?page=@i" class="btn btn-icon border-0 btn-hover-primary mr-2 my-1">@i</a>
                        }

                    }

                    @if (currnetPage == ViewBag.numberOFPages)
                    {
                        <a href="~/CashSale/Index?page=@naxtPage" class="btn btn-icon btn-light-primary mr-2 my-1 disabled"><i class="ki ki-bold-arrow-next icon-xs"></i></a>
                    }
                    else
                    {
                        <a href="~/CashSale/Index?page=@naxtPage" class="btn btn-icon btn-light-primary mr-2 my-1"><i class="ki ki-bold-arrow-next icon-xs"></i></a>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                No Data in DataBase !!
            </div>
        }
    </div>
</div>

